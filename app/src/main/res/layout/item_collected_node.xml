<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/notification_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin5"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/padding1"
    card_view:contentPadding="@dimen/padding8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dorothy.v2ex.View.CircleImageView
            android:id="@+id/node_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/node_name"
            android:textSize="@dimen/textSize7"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_toRightOf="@id/node_logo"/>

        <TextView
            android:id="@+id/topic_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize7"
            android:layout_below="@id/node_name"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_toRightOf="@id/node_logo"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>